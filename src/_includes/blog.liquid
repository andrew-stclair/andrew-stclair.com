---
navToHtmlOptions:
  showExcerpt: true
---
<!DOCTYPE html>
<html lang="en-AU">

<head>
	<title>{{ site.name }}</title>

	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width,initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
	<meta name="og:title" content="{{ site.name }}">
	<meta name="twitter:title" content="{{ site.name }}">
	<meta name="description" content="The blog of {{ site.name }}">
	<meta name="og:description" content="The blog of {{ site.name }}">
	<meta name="keywords" content="{{ site.name }}{% for keyword in site.keywords %}, {{ keyword }}{% endfor %}">
	<meta name="author" content="{{ site.name }}">

	<link href="/css/style.css" rel="stylesheet">
	<link href="/css/blog.css" rel="stylesheet">
	<link rel="icon" href="/favicon.ico" type="image/x-icon">

	<script src="https://use.typekit.net/tea2qzw.js"></script>
	<script>try { Typekit.load({ async: true }); } catch (e) { }</script>
</head>

<body>
	<main>
		<nav>{{ collections.blog | eleventyNavigationBreadcrumb: eleventyNavigation.key, navToHtmlOptions | eleventyNavigationToHtml }}</nav>
		<h1>{{ eleventyNavigation.title }} | {{ site.name }}</h1>
		{% assign navPages = collections.blog | eleventyNavigation: eleventyNavigation.key %}
		<ul>
		{%- for entry in navPages %}
  			<li{% if entry.url == page.url %} class="my-active-class"{% endif %}>
    			<div>
					<a href="{{ entry.url | url }}">
						<h2>{{ entry.title }}</h2>
						<p>{{ entry.excerpt }}</p>
					</a>
				</div>
 			 </li>
		{%- endfor %}
		</ul>
		<footer />
	</main>
</body>

</html>
