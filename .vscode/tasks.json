{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "11ty: Build",
            "type": "shell",
            "command": "npx @11ty/eleventy --input=src --output=build --config=src/.eleventy.js",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "11ty: Serve",
            "type": "shell",
            "command": "npx @11ty/eleventy --input=src --output=build --config=src/.eleventy.js --serve --port=8081",
            "problemMatcher": []
        },
        {
            "label": "Sign security.txt",
            "type": "shell",
            "command": "rm -rf src/.well-known/security.txt.sig; gpg --detach-sig --sign --output src/.well-known/security.txt.sig src/.well-known/security.txt; gpg --verify src/.well-known/security.txt.sig src/.well-known/security.txt",
            "problemMatcher": []
        }
    ]
}